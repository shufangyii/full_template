{
  "name": "full_template",
  "version": "0.0.0",
  "description": "full stack template",
  "private": "true",
  "type": "module",
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "changeset": "changeset",
    "changeset:version": "changeset version && node scripts/bump-version.js",
    "commit": "cz",
    "commitlint": "commitlint --edit",
    "dev": "turbo dev"
  },
  "dependencies": {
    "@my/api": "workspace:*",
    "@my/service": "workspace:*",
    "@my/web": "workspace:*"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.10.1",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.5.1",
    "husky": "^9.1.7",
    "turbo": "^2.6.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "cz.config.cjs"
    }
  }
}
