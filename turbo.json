{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "format": {},
    "lint": {},
    "check": {},
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "target/**"]
    }
  }
}
